            <p class="sample"><%= @user.email %> <%= link_to 'logout', signout_path %></p>
            <% else %>
            <p class="sample"><%= link_to "login", "/auth/dailycred" %></p>
            <% end %>
        </div>
        <div id="content">
            <% if alerted = alert %>
                <p id="alert"><%= alerted %></p>
            <% end %>
            <%= yield %>
        </div>
